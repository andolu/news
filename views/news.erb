<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Weather & News</title>
  </head>
  <body>

  <div class ="container mt-5">
    <img src="/images/weather.jpg"
  </div>
    <div class="container mt-5">

    
        <h1>Weather Forecast</h1>
   
            <div class="row">
            <%="It is currently #{@forecast["current"]["temp"]} degrees and 
            #{@forecast["current"]["weather"][0]["description"]}"%>
            </div>

        <h1>Extended Forecast</h1>
            <div class="row">          
            <% day_number = 1
            for @day in @forecast["daily"]
            if day_number < 9
            puts "On day #{day_number}, A high of #{@day["temp"]["max"]} and #{@day["weather"][0]["description"]}"
            else
            puts "Error"
            end    
            day_number = day_number + 1
            end %>
            <%="On day #{day_number}, A high of #{@day["temp"]["max"]} and #{@day["weather"][0]["description"]}"%> 
            </div>
                              
        </div>

    
<div class ="container mt-5">
    <h1>News</h1>        
    <img src="/images/print1920.jpg"
  </div>
  
  <div class="container mt-5">
     
      <h2>Headlines</h2>
      
      <%for @story in @news["articles"]
      puts "Top stories today #{@story["title"]}"
      end%> 
      <h4> <%= "Top story: #{@story["title"]}"%>   </h4>
      <%for @details in @news["articles"]
      puts "Full story: #{@details["description"]}"
      end%> 
      <p> <%="Details: #{@details["description"]}"%>  </p>
      <%for @url in @news["articles"]
      puts "URL: #{@url["url"]}"
      end%> 
      <p> <%= "URL: #{@url["url"]}"%>  </p>    
     
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>